{
  "name": "grpc-web-gateway",
  "private": true,
  "description": "gRPC for web",
  "author": "Nikita Gusakov <gusnkt@gmail.com>",
  "contributors": [
    "Mikhail Nasyrov <mikhail@mnasyrov.com>"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap --ignore-scripts",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint \"packages/**/{src,test}/**/*.ts\"",
    "lint:tsc": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "clean": "npm-run-all clean:*",
    "clean:dirs": "rimraf coverage .parcel-cache",
    "clean:lerna": "lerna run clean",
    "build": "lerna run build",
    "fmt": "prettier --write '**/**/*.{js,ts,js.flow,json,md}' --write",
    "example": "lerna exec --scope example -- npm start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js.flow,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "2.0.0-nightly.427",
    "@types/jest": "26.0.14",
    "@types/node": "14.14.0",
    "@typescript-eslint/eslint-plugin": "4.4.1",
    "@typescript-eslint/parser": "4.4.1",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.12.0",
    "husky": "4.3.0",
    "jest": "26.5.3",
    "lerna": "3.22.1",
    "lint-staged": "10.4.0",
    "npm-run-all": "4.1.5",
    "parcel": "2.0.0-nightly.427",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  }
}
